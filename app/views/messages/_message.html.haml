
.chat-main__message-list__contents
  .chat-main__message-list__contents__box
    .chat-main__message-list__contents__box__name
      = message.user.name
    .chat-main__message-list__contents__box__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__contents__message
    - if message.content.present?
      %p.lower-message__content
    = message.content
= image_tag message.image.url, class: 'chat-main__message-list__contents__message__image' if message.image.present?
  
  