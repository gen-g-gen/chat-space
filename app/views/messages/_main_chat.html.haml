.chat-main
  .chat-main__group-info
    .chat-main__group-info__title
      .chat-main__group-info__title__box
        .chat-main__group-info__title__box__name
          = @group.name
        .chat-main__group-info__title__box__menber
          Member:
          - @group.users. each do |user|
            =user.name
      .chat-main__group-info__title__edit
        = link_to edit_group_path(@group[:id]), class: "chat-main__group-info__title__edit__btn" do
          Edit
  .chat-main__message-list
    = render @messages
  .chat-main__message-form
    = form_for [@group, @message],id: "flex" do |form|
      .chat-main__message-form__box
        .chat-main__message-form__box__text
          .chat-main__message-form__box__text__message
            = form.text_field :content, id: "text", placeholder: "type a message.."
          .chat-main__message-form__box__text__btn
            = form.label :image do
              = icon 'far', 'image'
              = form.file_field :image, class: "gone"
        .chat-main__message-form__box__send-btn
          = form.submit "Send",id: "s-btn"
