.chat-main
  .chat-main__group-info
    .chat-main__group-info__title
      .chat-main__group-info__title__box
        .chat-main__group-info__title__box__name
          title
        .chat-main__group-info__title__box__menber
          member
      .chat-main__group-info__title__edit
        Edit
  .chat-main__message-list
    .chat-main__message-list__contents
      .chat-main__message-list__contents__box
        .chat-main__message-list__contents__box__name
          masa
        .chat-main__message-list__contents__box__time
          today
      .chat-main__message-list__contents__message
        goooood morning!
  .chat-main__message-form
    = form_for "#", id: "flex" do |form|
      .chat-main__message-form__box
        .chat-main__message-form__box__text
          .chat-main__message-form__box__text__message
            = form.text_field :text, placeholder: "type a message.."
          .chat-main__message-form__box__text__btn
            %label
            = icon 'far', 'image'         
            = form.file_field :image, id: "gone"
        .chat-main__message-form__box__send-btn
          = form.submit "Send"