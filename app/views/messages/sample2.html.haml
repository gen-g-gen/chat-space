.chat-main
  .chat-main__group-info
    .chat-main__group-info__title
      .chat-main__group-info__title__box
        .chat-main__group-info__title__box__name
          title
        .chat-main__group-info__title__box__menber
          member
      .chat-main__group-info__title__edit
