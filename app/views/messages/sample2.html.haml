  .chat-main__message-list
    .chat-main__message-list__contents
      .chat-main__message-list__contents__box
        .chat-main__message-list__contents__box__name
          masa
        .chat-main__message-list__contents__box__time
          today
      .chat-main__message-list__contents__message
        goooood morning!

  
  .chat-main__message-form
    .chat-main__message-form__box
      .chat-main__message-form__box__master
        %label
        = form_for "#" do |form|
        .chat-main__message-form__box__master__text-box
          = f.text_field :text, placeholder: "type a message.."
        .chat-main__message-form__box__master__image-btn
          = link_to "#" do
            = icon('far', 'image')
      .chat-main__message-form__box__send-btn
        = f.file_field :image
        = f.submit "Send",class: ".chat-main__message-form__box__send-btn" 