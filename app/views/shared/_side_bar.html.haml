.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-item
      .side-bar__user-name__top-item__name
        =current_user.name
      .side-bar__user-name__top-item__icons
        = link_to new_group_path, class: "side-bar__user-name__top-item__icons__edit" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "side-bar__user-name__top-item__icons__cog" do
          = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        = link_to "#" do
          .side-bar__group-list__group__name
            = group.name
          .side-bar__group-list__group__message
            "まだメッセージがありません"

